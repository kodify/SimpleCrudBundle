{% if customRowClassRenderer is defined and customRowClassRenderer != '' %}
    <tr class="{% include customRowClassRenderer with {'row': row} %}">
{% else %}
    <tr>
{% endif %}

    {% set counter = 0 %}
    {% for key,value in row %}
        {% if key in sorted_row_indexes %}
            <td>
                {% if table_header[counter] is defined and table_header[counter]['type'] is defined %}
                    {% if table_header[counter]['type'] == 'boolean'  %}
                        <i class="icon-{{ value ? 'ok' : 'remove' }}"></i>
                    {% elseif table_header[counter]['type'] == 'datetime'  %}
                        {{ value|date("h:m:i m/d/Y") }}
                    {% elseif table_header[counter]['type'] == 'options'  %}
                        {{ table_header[counter]['options'][value] }}
                    {% endif %}
                {% elseif table_header[counter] is defined and table_header[counter]['customCellRenderer'] is defined %}
                    {% include table_header[counter]['customCellRenderer'] with {'value': value} %}
                {% else %}
                   {{ value }}
                {% endif %}
            </td>
            {% set counter = counter + 1 %}
        {% endif %}
    {% endfor %}
    {% if has_row_actions %}
        <td>
            {% for key, action_row in table_row_actions %}
                {% include customActionButtonRenderer with {'key': key, 'action_row': action_row, 'index_key': index_key} %}
            {% endfor %}
        </td>
    {% endif %}
</tr>
<div class="ovAuto">
    <div class="pull-left">
        <div class="dataTables_info">
            {% trans %}Showing{% endtrans %} {{ str_from }} {% trans %}to{% endtrans %} {{ str_to }} {% trans %}of{% endtrans %} {{ total_rows }} {% trans %}entries{% endtrans %}
        </div>
    </div>
    <div class="pull-right">
        <div class="dataTables_paginate paging_bootstrap pagination span8">
            <ul>
                <li class='noborder'>
                    <select id="crud_page_size" class="select_styled">
                        {% for size in page_sizes %}
                            <option value="{{ size }}" {% if current_page_size == size %}selected{%endif%}>{{ size }} {% trans %}records per page{% endtrans %}</option>
                        {% endfor %}
                    </select>
                </li>
                <li class="{% if paginator_prev < 0 %}disabled{% endif %}">
                    <a id="crud_prev_button" class="{% if paginator_prev >= 0 %}page_link{% endif %}" data-page="{{ paginator_prev }}">← {% trans %}Prev{% endtrans %}</a>
                </li>
                {% for page_number in paginator_page %}
                    <li class="{% if page_number == current_page %}active{% endif %}">
                        <a class="page_link" data-page="{{ page_number }}">{{ page_number + 1 }}</a>
                    </li>
                {% endfor %}
                <li class="{% if paginator_next >= total_pages %}disabled{% endif %}">
                    <a id="crud_next_button" class="{% if paginator_next < total_pages %}page_link{% endif %}" data-page="{{ paginator_next }}">{% trans %}Next{% endtrans %} →</a>
                </li>
            </ul>
        </div>
    </div>
</div>